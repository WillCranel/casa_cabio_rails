<h3>Identificador</h3>
<p><%= @t.id %></p>
<h3>Usuário</h3>
<p><%= @t.user.email %></p>
<h3>Quantidade</h3>
<p><%= @t.amount %></p>
<h3>Moeda</h3>
<p><%= @t.currency == 'dollar' || @t.currency == 'Dólar' ? 'Dólar' : 'Real' %></p>
<h3>Cotação</h3>
<p><%= number_to_currency(@t.quotation, format: '%u %n', negative_format: '%u -%n') %></p>
<h3>Tipo</h3>
<p><%= @t.transaction_type == 'sell' || @t.transaction_type == 'Venda' ? 'Venda' : 'Compra' %></p>
<h3>Data</h3>
<p><%= @t.created_at.strftime('%d/%m/%Y') %></p>
<h3>Total</h3>
<p><%= number_to_currency(@t.calculate_total, format: '%u %n', negative_format: '%u -%n') %></p>

<%= link_to 'Apagar', transaction_path(@t), method: :delete, data: { confirm: 'Quer mesmo apagar essa transação?' } %>
<%= link_to 'Editar', edit_transaction_path %>
<%= link_to 'Voltar', root_path %>
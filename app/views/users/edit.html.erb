<% if @u.errors.full_messages.any? %>
  <ul>
    <p>Você deve informar todos os dados do usuário</p>
  </ul>
<% end %>

<%= form_for @u do |f| %>
  <%= f.label :name, 'Nome' %>
  <%= f.text_field :name %>
  <%= f.label :email, 'E-mail' %>
  <%= f.text_field :email %>
  <%= f.label :cpf, 'CPF' %>
  <%= f.text_field :cpf %>
  <%= f.submit 'Editar' %>
<% end %>

<%= link_to 'Voltar', root_path %>